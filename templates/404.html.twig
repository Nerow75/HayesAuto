{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block content %}

<div class="error-container flex flex-col items-center justify-center text-center h-screen bg-gray-100 px-4" id="error-page">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md">
        <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
        <p class="text-xl text-gray-600 mb-6">La page que vous cherchez n'existe pas ou a été déplacée.</p>
        <a href="/" class="btn-home inline-block px-6 py-3 bg-blue-500 hover:bg-blue-700 text-white font-medium text-sm leading-tight rounded shadow-md transition duration-150 ease-in-out">Retour à l'accueil</a>
    </div>
</div>

{% endblock %}